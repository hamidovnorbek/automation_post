# Social Media Automation Environment Configuration
# Copy relevant sections to your .env file

#--------------------------------------------------------------------------
# Social Media General Settings
#--------------------------------------------------------------------------

SOCIAL_MEDIA_ENABLED=true
SOCIAL_MEDIA_PUBLISH_IMMEDIATELY=false
SOCIAL_MEDIA_MAX_RETRY_ATTEMPTS=3
SOCIAL_MEDIA_RETRY_DELAY_MINUTES=5

#--------------------------------------------------------------------------
# Queue Configuration
#--------------------------------------------------------------------------

QUEUE_CONNECTION=database
SOCIAL_MEDIA_QUEUE_CONNECTION=database
SOCIAL_MEDIA_QUEUE_NAME=social-media
SOCIAL_MEDIA_QUEUE_TIMEOUT=300

#--------------------------------------------------------------------------
# Webhook Configuration
#--------------------------------------------------------------------------

SOCIAL_MEDIA_WEBHOOK_ENABLED=true
SOCIAL_MEDIA_WEBHOOK_URL=http://localhost:5678/webhook/social-post
SOCIAL_MEDIA_WEBHOOK_TIMEOUT=10
SOCIAL_MEDIA_WEBHOOK_RETRY_ATTEMPTS=3
SOCIAL_MEDIA_WEBHOOK_VERIFY_SSL=true

# Optional: Generic webhook secret for signature verification
APP_WEBHOOK_SECRET=your-generic-webhook-secret

#--------------------------------------------------------------------------
# Media Upload Configuration
#--------------------------------------------------------------------------

SOCIAL_MEDIA_MAX_FILE_SIZE_MB=50
SOCIAL_MEDIA_STORAGE_DISK=s3
SOCIAL_MEDIA_PUBLIC_URL_BASE=https://your-cdn-domain.com
SOCIAL_MEDIA_OPTIMIZE_IMAGES=true
SOCIAL_MEDIA_IMAGE_QUALITY=85

#--------------------------------------------------------------------------
# Facebook Configuration
#--------------------------------------------------------------------------

FACEBOOK_ENABLED=true
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_API_VERSION=v18.0

# Optional: Facebook webhook verification
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-facebook-webhook-verify-token

#--------------------------------------------------------------------------
# Instagram Configuration
#--------------------------------------------------------------------------

INSTAGRAM_ENABLED=true
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_API_VERSION=v18.0

# Note: Instagram uses the same app secret as Facebook for webhooks
# FACEBOOK_APP_SECRET is used for Instagram webhook verification too

#--------------------------------------------------------------------------
# Telegram Configuration  
#--------------------------------------------------------------------------

TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHANNEL_ID=@your-channel-username
# Or use numeric channel ID: TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_DISABLE_NOTIFICATION=false

# Optional: Telegram webhook verification
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

#--------------------------------------------------------------------------
# AWS S3 Configuration (for media hosting)
#--------------------------------------------------------------------------

AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name
AWS_URL=https://your-s3-bucket.s3.amazonaws.com

# Make sure your S3 bucket has public read access for the media files
# Instagram requires publicly accessible URLs for media uploads

#--------------------------------------------------------------------------
# Logging Configuration
#--------------------------------------------------------------------------

SOCIAL_MEDIA_LOGGING_ENABLED=true
SOCIAL_MEDIA_LOGGING_LEVEL=info
SOCIAL_MEDIA_LOG_REQUESTS=true
SOCIAL_MEDIA_LOG_RESPONSES=false
SOCIAL_MEDIA_LOG_MEDIA_UPLOADS=true

#--------------------------------------------------------------------------
# Testing and Development
#--------------------------------------------------------------------------

SOCIAL_MEDIA_TESTING_ENABLED=false
SOCIAL_MEDIA_FAKE_RESPONSES=false
SOCIAL_MEDIA_TEST_WEBHOOK_URL=http://localhost:8000/api/webhook/test
SOCIAL_MEDIA_DELAY_PUBLICATIONS_SECONDS=0

# Set to true to verify webhook signatures in local environment
APP_VERIFY_WEBHOOKS_LOCALLY=false

#--------------------------------------------------------------------------
# Monitoring and Alerts
#--------------------------------------------------------------------------

SOCIAL_MEDIA_MONITORING_ENABLED=true
SOCIAL_MEDIA_ALERT_ON_FAILURE=true
SOCIAL_MEDIA_ALERT_THRESHOLD=5
SOCIAL_MEDIA_ALERT_EMAIL=admin@yoursite.com
SOCIAL_MEDIA_ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

#--------------------------------------------------------------------------
# Cache Configuration
#--------------------------------------------------------------------------

SOCIAL_MEDIA_CACHE_ENABLED=true
SOCIAL_MEDIA_CACHE_TOKEN_TTL=3600
SOCIAL_MEDIA_CACHE_RATE_LIMIT_TTL=300

#--------------------------------------------------------------------------
# Platform-Specific Feature Toggles
#--------------------------------------------------------------------------

FACEBOOK_ENABLED=true
INSTAGRAM_ENABLED=true
TELEGRAM_ENABLED=true

